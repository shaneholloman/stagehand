{
  "name": "@browserbasehq/stagehand-server",
  "version": "3.1.0",
  "description": "Stagehand API server",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc && tsc-alias && pnpm run gen:openapi",
    "dev": "tsx watch src/server.ts",
    "build:binary": "bash scripts/build-binary.sh",
    "lint": "cd ../.. && prettier --check packages/server && cd packages/server && eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --exclude test/api-client.integration.test.ts",
    "test:integration": "vitest run test/api-client.integration.test.ts",
    "gen:openapi": "tsx scripts/gen-openapi.ts; cd ../.. && prettier --write packages/server/openapi.v3.yaml"
  },
  "dependencies": {
    "@browserbasehq/sdk": "^2.4.0",
    "@browserbasehq/stagehand": "workspace:*",
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@t3-oss/env-core": "^0.13.8",
    "dotenv": "^16.4.5",
    "fastify": "^5.3.2",
    "fastify-metrics": "^12.1.0",
    "fastify-plugin": "^4.5.1",
    "fastify-zod-openapi": "^5.5.0",
    "http-status-codes": "^2.3.0",
    "pino": "^9.7.0",
    "pino-pretty": "^11.3.0",
    "playwright": "1.52.0",
    "uuid": "^11.0.5",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "22.13.1",
    "esbuild": "0.27.2",
    "eslint": "^9.7.0",
    "openai": "4.87.1",
    "postject": "1.0.0-alpha.6",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.18.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/browserbase/stagehand.git",
    "directory": "packages/server"
  },
  "bugs": {
    "url": "https://github.com/browserbase/stagehand/issues"
  },
  "homepage": "https://stagehand.dev"
}
